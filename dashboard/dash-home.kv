PageLayout:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.05
            Label:
                text: 'Baudrate'
                size_hint: .3, 1
            TextInput:
                id: baudrate
                multiline: False
                text: '9600'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.85
            Label:
                text: 'Interaction log'
                size_hint: .3, 1
                valign: 'top'
            TextInput:
                id: interaction_log
                multiline: True
                readonly: True
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.05
            Label:
                text: 'Interaction log'
                size_hint: .3, 1
            TextInput:
                id: data
                multiline: False
        Button:
            id: send_button
            text: 'Send'
            size_hint: .2, 0.05
            on_press: app.send_data(self.text)
    BoxLayout:
        orientation: 'vertical'